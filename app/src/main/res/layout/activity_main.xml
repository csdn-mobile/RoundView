<?xml version="1.0" encoding="utf-8"?>
<com.csdn.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    app:rRadius="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <com.csdn.roundview.CircleImageView
                android:id="@+id/civ"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/ic_test"
                app:rStrokeColor="@color/color_selector"
                app:rStrokeWidth="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="CircleImageView"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <com.csdn.roundview.RoundImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_test"
                app:rRadius="30dp"
                app:rStrokeColor="#33000000"
                app:rStrokeWidth="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="RoundImageView"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <com.csdn.roundview.RoundTextView
                android:id="@+id/tv"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:background="@android:color/holo_blue_dark"
                android:gravity="center"
                android:text="Hello!"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                app:rLeftRadius="50dp"
                app:rRightRadius="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="RoundTextView"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <com.csdn.roundview.RoundButton
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:background="@android:color/holo_orange_dark"
                android:gravity="center"
                android:text="Hello!"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                app:rLeftRadius="20dp"
                app:rRightRadius="30dp"
                app:rStrokeColor="@android:color/holo_green_dark"
                app:rStrokeWidth="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="RoundButton"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <com.csdn.roundview.RoundView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                android:background="@android:color/holo_red_dark"
                app:rBottomLeftRadius="20dp"
                app:rBottomRightRadius="50dp"
                app:rTopLeftRadius="50dp"
                app:rTopRightRadius="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="RoundView"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <com.csdn.roundview.RoundLinearLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                app:rLeftRadius="30dp"
                app:rStrokeColor="@android:color/darker_gray"
                app:rStrokeWidth="5dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_dark" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_blue_dark" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_green_dark" />
            </com.csdn.roundview.RoundLinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="RoundLinearLayout"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <com.csdn.roundview.RoundRelativeLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                app:rRightRadius="30dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/holo_blue_dark" />
            </com.csdn.roundview.RoundRelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="RoundRelativeLayout"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <com.csdn.roundview.RoundFrameLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                app:rBottomLeftRadius="30dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/holo_orange_dark" />
            </com.csdn.roundview.RoundFrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="RoundFrameLayout"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</com.csdn.roundview.RoundLinearLayout>